<div id="home-container">
    <h1>Codeial/  <%= title%></h1>

    <section id="feed-posts">
        <h4>Posts</h4>
        <%if (locals.user) {%>
        <form id="new-post-forms" action="/posts/create" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="Type Here..."></textarea>
            <input type="submit" value="Post">
        </form>
        <%}%>
        <div id="display-posts">
            <h3>Posts:</h3>
            <ul>
                <%for (let i of all_posts) {%>
                    <li>
                        <p>
                            <%= i.content%>
                        </p>   
                        <p>
                            - by <%= i.user.name %>
                        </p>
                        <div id="post-comments">
                            <% if (locals.user) {%>
                                <form method="POST" action="/comments/create">
                                    <input type="text" name="content" placeholder="Type here to type comment...">
                                    <input type="hidden" name="post" value="<%= i._id%>">
                                    <input type="submit" value="Add Comments" name="" id="">
                                </form>
                            <%}%>
                        </div>
                    </li>
                <%}%>
            </ul>
        </div>
    </section>

</div>